<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    <unicorn>
      <configurations>
        <configuration name="JssBlazor.Project.StyleGuide"
                       description="JSS Blazor Style Guide website"
                       dependencies="JssBlazor.Foundation.*"
                       extends="Helix.Base">
          <predicate>
            <include name="Content" database="master" path="/sitecore/content/StyleGuide" />
            <include name="Layouts" database="master" path="/sitecore/layout/Layouts/Project/StyleGuide" />
            <include name="PlaceholderSettings" database="master" path="/sitecore/layout/Placeholder Settings/Project/StyleGuide" />
            <include name="Renderings" database="master" path="/sitecore/layout/Renderings/Project/StyleGuide" />
            <include name="Media" database="master" path="/sitecore/media library/Project/StyleGuide" />
            <include name="ApiKeys" database="master" path="/sitecore/system/Settings/Services/API Keys/Project/StyleGuide" />
            <include name="Templates" database="master" path="/sitecore/templates/Project/StyleGuide" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
