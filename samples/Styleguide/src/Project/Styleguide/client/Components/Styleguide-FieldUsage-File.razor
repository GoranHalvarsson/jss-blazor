@inherits JssComponentBase

@*
    Demonstrates usage of a File content field within JSS.
    File types are stored within Sitecore's Media Library data, and can be edited.
*@
<Styleguide_Specimen Component="@Component"
                     E2EId="styleguide-fieldusage-file">
    @* Renders a file link *@
    <File Field="@Component.Fields["file"]" />
    <br />

    @* Renders a file link with a custom body and opening in a new tab *@
    <File Field="@Component.Fields["file"]"
          target="_blank">
        Custom link body
    </File>
</Styleguide_Specimen>
