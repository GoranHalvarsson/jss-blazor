@inherits JssComponentBase

@*
    Demonstrates usage of a General Link (hyperlink) content field within JSS.    
*@
<Styleguide_Specimen Component="@Component"
                     E2EId="styleguide-fieldusage-link">
    External link:
    <Link Field="@Component.Fields["externalLink"]" />
    <br />
    Internal link:
    <Link Field="@Component.Fields["internalLink"]">
        <em>HTML</em> or other components can be used within link renderers, for example links to
        images.
    </Link>
    <br />
    Email link:
    <Link Field="@Component.Fields["emailLink"]" />
    <br />
    All possible content params link:
    <Link Field="@Component.Fields["paramsLink"]" class="font-weight-bold" />
    <br />
    The link component accepts params of its own:
    <Link Field="@Component.Fields["externalLink"]"
          ShowLinkTextWithChildrenPresent="@true"
          class="font-weight-bold"
          data-otherattributes="pass-through-to-anchor-tag" />
</Styleguide_Specimen>
